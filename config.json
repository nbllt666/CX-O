{
  "system": {
    "llm_provider": "vllm",
    "vllm": {
      "host": "localhost",
      "port": 8000,
      "model": "Qwen2.5-7B-Instruct"
    },
    "ollama": {
      "host": "http://localhost:11434",
      "model": "llama3.2"
